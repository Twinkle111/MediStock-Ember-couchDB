
<h2>List</h2>
<div class="row">
  {{#each model as |stock|}}
    <div class="col-md-4">
      <div class="panel panel-default library-item">
        <div class="panel-heading">
          <h3 class="panel-title">{{stock.medicinename}}</h3>
        </div>
        <div class="panel-body">
          <p>IN STOCK: {{stock.quantity}}</p>
          <p>Price: {{stock.price}}</p>
        </div>
        <div class="panel-footer text-right">
          {{#link-to 'stocks.edit' stock.id class='btn btn-success btn-xs'}}Edit{{/link-to}}
          <button class="btn btn-danger btn-xs" {{action 'deleteStock' stock}}>Delete</button>
        </div>
      </div>
    </div>
  {{/each}}
</div>
