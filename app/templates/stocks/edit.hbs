<h2>Add a new local Stock Data</h2>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Medicine Name</label>
    <div class="col-sm-10">
      {{input type="text" value=model.medicinename class="form-control" placeholder="The medicineName of the Stock"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">In Stock</label>
    <div class="col-sm-10">
      {{input type="text" value=model.quantity class="form-control" placeholder="The InStock Info of the Stock"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Price</label>
    <div class="col-sm-10">
      {{input type="text" value=model.price class="form-control" placeholder="The Price of the Stock"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'saveStock' model}}>Add to stock list</button>
    </div>
  </div>
</div>
